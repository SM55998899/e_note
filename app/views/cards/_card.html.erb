<li id="card-<%= card.id %>">
  <div id="card-feed">
    <span class="front"><%= card.front %></span>
    :&nbsp;
    <span class="back"><%= card.back %></span>
  </div>
  <span class="timestamp">
    <%= time_ago_in_words(card.created_at) %>
    前に作成
    <% if current_user?(card.user) %><%= link_to "delete",
      card,
      data: {
        "turbo-method": :delete,
        turbo_confirm: "You sure?"
      } %><% end %>
  </span>

  <% if current_user.already_liked?(card) %>
    <%= button_to "いいねを取り消す", card_like_path(card, id: card.id), method: :delete %>
  <% else %>
    <%= button_to "いいね", card_likes_path(card) %>
  <% end %>
</li>
