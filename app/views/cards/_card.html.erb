<div id="card-feed">
  <li id="card-<%= card.id %>">
    <div class="cc">
      <span class="front"><%= card.front %></span>
      :&nbsp;
      <span class="back"><%= card.back %></span>
    </div>

    <div class="timestamp">
      <%= time_ago_in_words(card.created_at) %>
      前に作成
    </div>

    <div class="cc-sub">

      <div class="dg">
        <div class="good">
          <% if current_user.already_liked?(card) %>
            <%= button_to "いいねを取り消す", card_like_path(card, id: card.id), method: :delete %>
          <% else %>
            <%= button_to "いいね", card_likes_path(card) %>
          <% end %>
        </div>

        <% if current_user?(card.user) %><%= link_to "削除",
          card,
          class: "delete",
          data: {
            "turbo-method": :delete,
            turbo_confirm: "本当に削除しますか?"
          } %><% end %>

      </div>
    </div>
  </li>
</div>
