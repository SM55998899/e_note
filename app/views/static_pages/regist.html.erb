<% if logged_in? %>
  <div id="card-contents">
    <div class="makecard">
      <h2>単語を作成する。</h2>
      <h3>記憶をインプットしよう</h3>
      <section class="card_form">
        <%= render "shared/card_form" %>
      </section>
    </div>
    <div class="feedcard">
      <div class="fc-head">
        <h3>作成した単語</h3>
        <%= link_to "マーク単語一覧", card_likes_path(:card_id), class: "fc-likes" %>
      </div>
      <%= render "shared/feed2" %>
    </div>
  </div>
<% else %>
  <%= render "shared/urge" %>
<% end %>
