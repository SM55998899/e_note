<% if logged_in? %>
  <div class="l-kingdom">
    <div class="todotext">
      <h1>予定を作ろう！</h1>
      <h3>有意義な1日を過ごすための計画</h3>
    </div>
    <%= link_to "＋ リストを作成する", new_list_path, class: "pluslist" %>
    <div class="l-contents">
      <% @lists.each do |list| %>
        <div class="list">
          <div class="list_header">
            <h2 class="list_header_title"><%= list.title %></h2>
            <%= link_to(edit_list_path(list)) do %>
              <%= image_tag("edit.png", alt: "編集する", class: "list-icon") %>
            <% end %>
            <%= link_to list,
            data: {
              "turbo-method": :delete,
              turbo_confirm: "本当に削除してよろしいですか？"
            } do %>
              <%= image_tag("trash.png", alt: "削除する", class: "list-icon trash") %>
            <% end %>
          </div>

          <% list.tips.each do |tip| %>
            <%= link_to list_tip_path(list, tip), class:"cardDetail_link" do %>
              <div class="tip">
                <h3 class="tip-title"><%= tip.title %></h3>
                <% if tip.memo.size > 0 %>
                  <div class="tip_detail">（メモあり）</div>
                <% end %>
              </div>
            <% end %>
          <% end %>

          <%= link_to new_list_tip_path(list), class: "addCard_link" do %>
            <%= image_tag("plus.png", alt: "削除する", class: "list-icon plus") %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <%= render "shared/urge" %>
<% end %>
