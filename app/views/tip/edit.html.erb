<%= form_with model: @tip, url: { action: :update }, html: { class: 'tipeditForm' }, local: true do |f| %>
  <% if @tip.errors.any? %>
    <p class="text-danger">タイトルは1～255文字以内で入力してください</p>
  <% end %>
  <div class="tipeditForm_title">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "カード名" %>
  </div>
  <div class="tipeditForm_memo">
    <%= f.label :memo %>
    <%= f.text_area :memo, class: "form-control", placeholder: "詳細" %>
  </div>

  <div class="tipeditform">
    <label>リスト名</label>
    <%= select :tip,
    :list_id,
    @lists.map { |l| [l.title, l.id] },
    {},
    { class: "form-control" } %>
  </div>

  <div class="text-center"><%= f.submit "更新する", class: "submitBtn" %></div>
<% end %>
