<div class="d-feed-p">
  <li id="micropost-<%= micropost.id %>">
    <span class="content"><%= micropost.content %></span>
    <span class="timestamp">
      <%= time_ago_in_words(micropost.created_at) %>
      に作成
      <% if current_user?(micropost.user) %>
        <%= link_to "delete",
        micropost,
        data: {
          "turbo-method": :delete,
          turbo_confirm: "You sure?"
        } %><% end %>
    </span>
  </li>
</div>
