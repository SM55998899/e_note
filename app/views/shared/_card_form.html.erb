<%= form_with(model: @card) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="front">
    <%= f.text_area :front, placeholder: "単語を入力..." %>
  </div>
  <div class="back">
    <%= f.text_area :back, placeholder: "単語の意味を入力..." %>
  </div>
  <%= f.submit "作成", class: "btn btn-primary" %>
<% end %>
